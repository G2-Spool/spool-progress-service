# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/spool_progress
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Service Configuration
SERVICE_NAME=progress-service
SERVICE_PORT=8004
ENVIRONMENT=development

# API URLs
API_GATEWAY_URL=http://localhost:8000
EXERCISE_SERVICE_URL=http://localhost:8003
CONTENT_SERVICE_URL=http://localhost:8002

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Gamification Settings
POINTS_CONCEPT_STARTED=5
POINTS_CONCEPT_COMPLETED=10
POINTS_CONCEPT_MASTERED=25
POINTS_PERFECT_SCORE_BONUS=10
POINTS_DAILY_STREAK=5
POINTS_WEEKLY_GOAL=50
STREAK_GRACE_HOURS=36

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
REPORT_GENERATION_TIMEOUT=60
ENABLE_AI_INSIGHTS=true

# Notification Settings
EMAIL_ENABLED=true
SMS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=true
NOTIFICATION_BATCH_SIZE=100

# AWS Configuration (for SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
SES_FROM_EMAIL=noreply@spool.edu

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Firebase Configuration (for push)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Dashboard Configuration
LEADERBOARD_SIZE=100
LEADERBOARD_CACHE_TTL=300
DASHBOARD_CACHE_TTL=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true